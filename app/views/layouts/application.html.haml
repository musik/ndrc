!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    <meta name="baidu-site-verification" content="k1Oxej4vzIPBL6De" />
    %title
      -#=content_for?(:title) ? [yield(:title),'(NDRC)'].join('') : t('appname')
      -if content_for?(:title)
        =[yield(:title),@title_suffix || "(企业搜索)"].join()
      -else
        =t('appname')
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
    = yield(:head)
    =render "layouts/iefix"
    = javascript_include_tag "application"
  -@body_class ||= "#{controller_name} #{action_name} #{controller_name}_#{action_name}"
  -@body_class += " nonav " if @nonav
  %body{:class=>@body_class}
    -unless @nonav
      %header.navbar.navbar-fixed-top
        %nav.navbar-inner
          .container
            = render 'layouts/navigation'
    %main{:role => "main"}
      = render :partial => 'layouts/cityhead' if @city_name
      -if @nocontent
        = render 'layouts/messages'
        =yield
      -else
        .container
          .content
            =render 'layouts/messages'
            -unless @hide_bread
              .breadcrumbx
                当前位置:
                = breadcrumbs.render :format=>:inline, :separator => '>'
            .row
              =render "layouts/#{@cols || 'col1'}"
    %footer
      = render :partial => 'layouts/belt'
      .text-center
        =yield :partners
        &copy; 2012 
        www.ndrc.ac.cn
        京ICP备05050413号 
        -#=link_to "分类","/fenlei"
        -#=link_to "企业","/qiye"
        =link_to "网站地图","/zeig"
        =link_to "最新注册","/qiye/recent"
        =link_to "最新搜索","/topics/recent"
        #links
          =link_to "友情链接",'/links'
          -if is_home?
            =':'
            =Snip.get('home').html_safe
    =render "layouts/iefixjs"
    -if Rails.env.production?
      = render :partial => 'layouts/ga'
      ='<script type="text/javascript" src="http://js.tongji.linezing.com/3085226/tongji.js"></script><noscript><a href="http://www.linezing.com"><img src="http://img.tongji.linezing.com/3085226/tongji.gif"/></a></noscript>'.html_safe
